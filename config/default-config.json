{
  "version": "1.3.0",
  "description": "Ultra System Cleaner Configuration File - Enterprise Edition with Security, Analytics, and Advanced Features",

  "global": {
    "enabled": true,
    "dryRun": false,
    "verbose": false,
    "parallel": true,
    "backup": true,
    "backupLocation": "~/.ultra-cleaner-backups",
    "logLevel": "info",
    "logFile": "~/.ultra-cleaner.log",
    "analytics": true,
    "analyticsLocation": "~/.ultra-cleaner-analytics",
    "reportFormat": "json",
    "reportLocation": "~/Documents/ultra-cleaner-reports",
    "securityLevel": "standard",
    "autoRecovery": true,
    "validation": true,
    "interactive": true
  },

  "categories": {
    "system": {
      "enabled": true,
      "priority": 1,
      "description": "System temporary files and caches with security validation",
      "backup": true,
      "analytics": true
    },
    "user": {
      "enabled": true,
      "priority": 2,
      "description": "User-specific cache and temporary data with analytics tracking",
      "backup": true,
      "analytics": true
    },
    "browsers": {
      "enabled": true,
      "priority": 3,
      "description": "Web browser caches and data with security scanning",
      "backup": true,
      "analytics": true
    },
    "apps": {
      "enabled": true,
      "priority": 4,
      "description": "Application-specific cache and temporary files with validation",
      "backup": true,
      "analytics": true
    },
    "npm": {
      "enabled": true,
      "priority": 5,
      "description": "Node.js and package manager caches with dependency analysis",
      "backup": false,
      "analytics": true
    },
    "logs": {
      "enabled": true,
      "priority": 6,
      "description": "System and application log files with security filtering",
      "backup": false,
      "analytics": false
    }
  },

  "customPaths": [
    {
      "name": "custom-development",
      "enabled": true,
      "category": "user",
      "securityLevel": "standard",
      "backup": true,
      "analytics": true,
      "paths": [
        {
          "path": "~/Projects/*/node_modules/.cache",
          "description": "Project-specific cache directories with security validation",
          "recursive": true,
          "excludePatterns": ["**/important-cache/**"],
          "validation": true
        },
        {
          "path": "~/Downloads/temp",
          "description": "Temporary download folder with analytics tracking",
          "recursive": true,
          "analytics": true
        }
      ]
    },
    {
      "name": "work-files",
      "enabled": false,
      "category": "user",
      "securityLevel": "high",
      "backup": true,
      "analytics": true,
      "paths": [
        {
          "path": "~/Documents/Work/temp",
          "description": "Work-related temporary files with enhanced security",
          "recursive": true,
          "excludePatterns": ["**/*.important", "**/backup/**"],
          "validation": true,
          "backup": true
        }
      ]
    }
  ],

  "excludePatterns": {
    "global": [
      "**/node_modules/**",
      "**/.git/**",
      "**/backup/**",
      "**/*.log",
      "**/important*/**",
      "**/.ultra-cleaner-backups/**",
      "**/.ultra-cleaner-analytics/**"
    ],
    "perCategory": {
      "browsers": [
        "**/Default/Extensions/**",
        "**/Default/Local Extension Settings/**",
        "**/Default/Storage/**"
      ],
      "apps": [
        "**/Microsoft/Teams/Meeting Recordings/**",
        "**/Adobe/**/Cache/**"
      ],
      "system": [
        "**/Windows/WinSxS/**",
        "**/System32/config/**"
      ]
    }
  },

  "analytics": {
    "enabled": true,
    "location": "~/.ultra-cleaner-analytics",
    "retentionDays": 90,
    "autoExport": false,
    "exportFormats": ["json", "html"],
    "reportFrequency": "weekly",
    "includeSystemInfo": true,
    "trackPerformance": true,
    "trackErrors": true
  },

  "security": {
    "level": "standard",
    "backupBeforeDelete": true,
    "validatePaths": true,
    "scanForMalware": false,
    "encryptBackups": false,
    "requireConfirmation": true,
    "allowedPathsOnly": false,
    "blockSystemPaths": true
  },

  "includePatterns": {
    "global": [
      "**/*.tmp",
      "**/*.temp",
      "**/*.cache",
      "**/cache/**",
      "**/temp/**",
      "**/tmp/**",
      "**/*.log",
      "**/logs/**"
    ]
  },

  "schedule": {
    "enabled": false,
    "frequency": "weekly",
    "dayOfWeek": "sunday",
    "time": "02:00",
    "categories": ["system", "user", "browsers"],
    "dryRun": true,
    "notifications": true,
    "backup": true,
    "analytics": true
  },

  "notifications": {
    "enabled": true,
    "desktopNotifications": true,
    "sound": true,
    "completionReport": true,
    "errorAlerts": true,
    "analyticsSummary": true,
    "securityAlerts": true
  },

  "performance": {
    "maxParallelJobs": 4,
    "chunkSize": 1000,
    "timeout": 30000,
    "retryAttempts": 3,
    "memoryLimit": "1GB",
    "cpuPriority": "normal",
    "progressReporting": true
  },

  "backup": {
    "enabled": true,
    "location": "~/.ultra-cleaner-backups",
    "retentionDays": 30,
    "compression": true,
    "encrypt": false,
    "maxSizeGB": 10,
    "autoCleanup": true,
    "verifyIntegrity": true
  },

  "reporting": {
    "enabled": true,
    "formats": ["json", "html", "csv"],
    "autoGenerate": false,
    "frequency": "monthly",
    "includeAnalytics": true,
    "includeSecurity": true,
    "outputDirectory": "~/Documents/ultra-cleaner-reports"
  }
}
